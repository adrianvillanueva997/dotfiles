[core]
    pager = delta
    editor = nvim
    excludesfile = ~/.gitignore_global

[interactive]
    diffFilter = delta --color-only
    keep-plus-minus-markers = false

[delta]
    side-by-side = true
    line-numbers = true
    syntax-theme = "Monokai Extended"
    navigate = true
    hyperlinks = true
    width = 256

    # File & commit decorations
    commit-decoration-style = "bold yellow box"
    file-style = "bold cyan ul"
    hunk-header-style = "bold magenta"

    # Extra visibility
    whitespace-error-style = "underline red"
    commit-style = "bold"
    commit-hash-style = "cyan"

    # Navigation
    line-numbers = true

[merge]
    conflictstyle = diff3

[push]
    autoSetupRemote = true

[includeIf "gitdir:~/proyectos/"]
path = ~/.gitconfig-personal

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    df = diff
    lg = log --oneline --graph --decorate --all
    amend = commit --amend
    unstage = reset HEAD --
    last = log -1 HEAD
    wip = "!git add -A && git commit -m 'WIP'"
    fixup = "!f() { git commit --fixup $1; }; f"

[color]
    ui = auto

[credential]
    helper = cache
    cachetimeout = 3600